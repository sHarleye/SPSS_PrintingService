<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Printing_Service</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="~/Printing_Service.styles.css" asp-append-version="true" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand&display=swap" rel="stylesheet">


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/lightslider/1.1.6/css/lightslider.min.css" />


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">







    <style>



          #adaptive img{
            width: 100%;

        }

            }

            footer {
                position: relative;
                bottom: 0;
                width: 100%;
            }

            .content-holder .content {
                padding: 25px;
                background-color: white;
                width: 80%;
            }

             .content-holder .content h1 ~ h2 {
                    font-size: 1em;
                    color: darkgray;
              }

            .site-footer {
                background-color: black;
                color: white;
                padding: 5px;
                text-align: center;
            }

            .footer-widget-holder {
                display: flex;
                background-color: ##121C57;
                color: white;
                justify-content: space-around;
            }

            .footer-widget {
                font-size: small;
                padding: 50px;
            }


            .navbar-nav .nav-link.btn:hover {
                background-color: orange !important;
                color: black !important;
                font-weight: bold;
            }

            .fa-user {
                color: black;
            }

            .hello:hover{
                font-weight: bold;
            }

        .indam:hover {
            color: orange !important;
            font-weight: bold !important;
        }



    </style>

</head>

<body>



    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow space-be">
            <div class="container-fluid">
                <img src="~/Image/logoBK.jpg" alt="logo" style="width: 130px ; height: 90px;">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">HCMUT Printing_Service</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item me-4">
                            <a class="nav-link text-dark hello" asp-area="" asp-controller="Home" asp-action="MainPageSPSO">Trang chủ</a>
                        </li>
                        <li class="nav-item me-4">
                            <a class="nav-link text-dark hello" asp-area="" asp-controller="" asp-action="">Lịch sử in</a>
                        </li>
                        <li class="nav-item me-4">
                            <a class="nav-link text-dark hello" asp-area="" asp-controller="Home" asp-action="EditSystemSPSO">Cài đặt hệ thống</a>
                        </li>
       
                        <li class="nav-item me-4">
                            <a class="nav-link text-dark hello" asp-area="" asp-controller="" asp-action="">Hỗ trợ</a>
                        </li>
                        <li class="nav-item dropdown me-4">
                            <a class="nav-link dropdown-toggle text-dark ms-2" href="#" id="notificationDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-bell"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="notificationDropdown">
                                <li><a class="dropdown-item hello" href="#">Notification 1</a></li>
                                <li><a class="dropdown-item hello" href="#">Notification 2</a></li>
                                <li><a class="dropdown-item hello" href="#">Notification 3</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown me-3">
                            <a class="nav-link dropdown-toggle text-white ms-2" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user"></i>
                                <style>
                                    .fa-user {
                                        color: black;
                                        border: 2px solid black;
                                        border-radius: 50%;
                                        padding: 5px;
                                        transition: background-color 0.3s, color 0.3s;
                                    }
                                    .fa-user:hover {
                                        background-color: black;
                                        color: white;
                                    }
                                </style>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                                <li><a class="dropdown-item hello" asp-area="" asp-controller="Login" asp-action="Login">Log In</a></li>
                                <li><a class="dropdown-item hello" asp-area="" asp-controller="Home" asp-action="Privacy">Sign Up</a></li>
                                <li><a class="dropdown-item hello" href="#">Settings</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a asp-controller="Home" asp-action="Index" class="dropdown-item mb-2 hello">Log Out<i class="fa-solid fa-right-from-bracket ms-2"></i></a></li>
                            </ul>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>



    @RenderBody()



    <section class="d-flex justify-content-between align-items-center p-5" style="background-color: #121C57; color: white; font-family: 'Quicksand', sans-serif;">
        <div class="container d-flex justify-content-between align-items-start">
            <div>
                <h5 class="fw-bold">Address </h5>
                <p class="mb-3">Cơ sở 1 - 268 Lý Thường Kiệt, Phường 14, Quận 10, Tp.HCM</p>
                <div class="gmap" style=" width: 130%; height: 300px;">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.504707346954!2d106.657698!3d10.772603!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752ec17709146b%3A0x54a1658a0639d341!2zxJDhuqFpIEjhu41jIELDoWNoIEtob2EgLSAyNjggTMO9IFRoxrDhu51uZyBLaeG7h3Q!5e0!3m2!1sen!2s!4v1719220764881!5m2!1sen!2s"
                            width="100%"
                            height="100%"></iframe>
                </div>
            </div>

            <div class="ms-5">
                <h5 class="fw-bold">Các dịch vụ</h5>
                <ul class="list-unstyled mb-0">
                    <li class=""><a class="text-decoration-none text-white indam" href="#">Hỗ trợ</a></li>
                    <li class=""><a class="text-decoration-none text-white indam " href="#">About Us</a></li>
                    <li class=""><a class="text-decoration-none text-white indam" href="#">Đăng ký dịch vụ in</a></li>
                </ul>
                <div class="mt-4">
                    <h5 class="fw-bold">Timing</h5>
                    <p><strong>Mon - Fri</strong> <time datetime="09:00">09:00 AM</time> - <time datetime="17:00">05:00 PM</time></p>
                </div>
                <div class="mt-4">
                    <p>
                        <strong>Phone Number (liên hệ để hỗ trợ):</strong>
                        <br />
                        (84-8) 38647256 - 5258
                    </p>
                </div>

            </div>

            <div class="me-5">
                <h5 class="fw-bold">Contact Us</h5>
                <ul class="list-unstyled d-flex mb-0 mt-3 me-5">
                    <li class="ms-1"><a class="text-decoration-none text-white indam" href="https://www.facebook.com" target="_blank"><i class="fab fa-facebook-f"></i></a></li>
                    <li class="ms-3"><a class="text-decoration-none text-white indam" href="https://www.twitter.com" target="_blank"><i class="fab fa-twitter"></i></a></li>
                    <li class="ms-3"><a class="text-decoration-none text-white indam" href="https://www.instagram.com" target="_blank"><i class="fab fa-instagram"></i></a></li>
                    <li class="ms-3"><a class="text-decoration-none text-white indam" href="https://www.pinterest.com" target="_blank"><i class="fab fa-pinterest-p"></i></a></li>
                    <li class="ms-3"><a class="text-decoration-none text-white indam" href="https://www.youtube.com" target="_blank"><i class="fab fa-youtube"></i></a></li>
                </ul>

                <br />

                <h5 class="fw-bold">Links to some HCMUT website</h5>
                <ul class="d-flex flex-column mb-0 mt-3 me-5">
                    <li class=""><a class="text-decoration-none text-white indam" href="https://lms.hcmut.edu.vn/" target="_blank">HCMUT LMS</a></li>
                    <li class=""><a class="text-decoration-none text-white indam" href="https://mybk.hcmut.edu.vn/my/index.action" target="_blank">MyBK</a></li>
                    <li class=""><a class="text-decoration-none text-white indam" href="https://bkpay.hcmut.edu.vn/bkpay/home.action" target="_blank">BkPay</a></li>

                </ul>
            </div>
        </div>
    </section>

    <footer class="site-footer">
        <p><small>Copyright &copy2024</small></p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lightslider/1.1.6/js/lightslider.min.js"></script>


    <script>

        $(document).ready(function () {
            $('#adaptive').lightSlider({
                adaptiveHeight: true,
                item: 1,
                slideMargin: 0,
                loop: true,
                auto: true,
                pause: 5000 // 5 seconds
            });

            $('.main-menu .mobile-menu').hide();

            $('.toggler').click(function () {
                $('.main-menu > ul:nth-of-type(2)').toggle();
                $('.drop').css({ 'display': 'block', 'position': 'relative' });
            });
        });
    </script>






    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
