            <p class="text-center mt-3">
                Don't have an account? <a asp-controller="Login" asp-action="Register" class="text-decoration-none">Register</a>
            </p>
            <div class="text-center mt-3">
                <a asp-controller="Login" asp-action="Login" class="text-decoration-none">Back</a>
            </div>
        </form>
    </div>
