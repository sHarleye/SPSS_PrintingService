    <script>
        function toggleStatus(checkbox, id) {
            const status = checkbox.checked ? 'active' : 'inactive';
            const badge = document.querySelector(`#${id}`).closest('tr').querySelector('.badge');
            const label = checkbox.closest('.form-check').querySelector('label');

            // Update status visually
            if (status === 'active') {
                badge.classList.remove('bg-danger');
                badge.classList.add('bg-success');
                badge.textContent = 'Hoạt động';
            } else {
                badge.classList.remove('bg-success');
                badge.classList.add('bg-danger');
                badge.textContent = 'Tạm ngưng hoạt động';
            }

            // Handle success or error messages based on the toggle
            if (status === 'active') {
                Swal.fire({
                    title: 'Thành công!',
                    text: 'Cấp quyền thành công',
                    icon: 'success',
                    confirmButtonText: 'OK'
                });
            } else {
                Swal.fire({
                    title: 'Thành công!',
                    text: 'Hủy cấp quyền thành công',
                    icon: 'warning',
                    confirmButtonText: 'OK'
                });
            }
        }
    </script>
