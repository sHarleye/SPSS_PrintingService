        margin-top: 30px;
        margin-bottom: 30px;
    }

    .print-confirm {
        margin: auto;
        width: 50%;
    }

    .print-progress {
        max-width: 500px;
        background-color: lightskyblue;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        margin-top: 30px;
        margin-bottom: 30px;
    }

    .delete {
        position: absolute;
        right: 10px;
        top: 10px;
        background: none;
        border: none;
        font-size: 1.2em;
        cursor: pointer;
    }

    .config {
        margin: auto;
