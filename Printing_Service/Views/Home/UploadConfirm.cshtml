<style>
    .imagebehind {
        background-size: cover;
        background-position: center;
        height: 110vh;
        width: 100%;
    }

    body {
        margin: 0;
        padding: 0;
        background-color: #f4f4f9;
    }

    .container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
        padding: 20px;
    }

    .printer-card {
        background-color: white;
        border: 1px solid #ddd;
        border-radius: 8px;
        width: 300px;
        text-align: center;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

        .printer-card img {
            width: 80px;
            margin-top: 20px;
        }

        .printer-card h3 {
            margin: 10px 0;
        }

    .status {
        font-size: 14px;
        margin-bottom: 10px;
    }

        .status.active {
            color: green;
        }

        .status.inactive {
            color: red;
        }

        .status.unknown {
            color: orange;
        }

    .button-group {
        display: flex;
        justify-content: space-around;
        margin: 10px 0 20px;
    }

        .button-group button {
            background-color: coral;
            color: white;
            border: none;
            border-radius: 4px;
            padding: 5px 10px;
            cursor: pointer;
            font-size: 14px;
        }

            .button-group button.off {
                background-color: red;
            }

            .button-group button.edit {
                background-color: orange;
            }

            .button-group button:hover {
                opacity: 0.8;
            }

            .button-group button:disabled {
                background-color: gray;
                opacity: 0.8;
                cursor: not-allowed;
            }

    .account-box {
        width: 80%;
        max-width: 1200px;
        background-color: rgba(255, 255, 255, 0.8);
        padding: 40px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        border: 1px solid black;
        border-radius: 20px;


    }

    .content-box {
        background-color: white;
        padding: 20px;
        border-radius: 10px;
    }

    .print-info {
        display: flex;
        width: 1000px;
        background-color: rgba(255, 255, 255, 0.8);
        padding: 20px;
        border-radius: 8px;
