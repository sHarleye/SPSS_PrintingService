<div class="overlay2" id="progress">
    <div class="print-progress">
        <h2 style="text-decoration: underline;text-decoration-color:gray;text-underline-offset: 20px;text-align:center;">Trạng thái in</h2>
        <br />
        <br />
        <label class="prog" style="text-align:center;">Tài liệu</label>
        <label class="prog" style="text-align:center;">sample.pdf</label>
        <br />
        <p style="text-align:center;color:mediumseagreen;font-weight:bold;">• In thành công</p>
        <br />
        <div class="config">
            <button class="next" onclick="location.href='@Url.Action("MainPage", "Home")'">Thoát</button>
        </div>
    </div>
</div>

<style>
    .imagebehind {
        background-image: url('/image/white.jpg');
        background-size: cover;
        background-position: center;
        height: 100vh;
        width: 100%;
    }

    body {
        margin: 0;
        padding: 0;
        background-color: #f4f4f9;
    }

    .container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
        padding: 20px;
    }

    .printer-card {
        background-color: white;
        border: 1px solid #ddd;
        border-radius: 8px;
        width: 300px;
        text-align: center;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

        .printer-card img {
            width: 80px;
            margin-top: 20px;
        }

        .printer-card h3 {
            margin: 10px 0;
        }

    .status {
        font-size: 14px;
        margin-bottom: 10px;
    }

        .status.active {
            color: green;
        }

        .status.inactive {
            color: red;
        }

        .status.unknown {
            color: orange;
        }

    .button-group {
        display: flex;
        justify-content: space-around;
        margin: 10px 0 20px;
    }

        .button-group button {
            background-color: forestgreen;
            color: white;
            border: none;
            border-radius: 4px;
            padding: 5px 10px;
            cursor: pointer;
            font-size: 14px;
        }

            .button-group button.off {
                background-color: red;
            }

            .button-group button.edit {
                background-color: orange;
            }

            .button-group button:hover {
                opacity: 0.8;
            }

            .button-group button:disabled {
                background-color: gray;
                opacity: 0.8;
                cursor: not-allowed;
            }

    .account-box {
        width: 80%;
        max-width: 1200px;
        background-color: rgba(255, 255, 255, 0.8);
        padding: 50px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        border: 1px solid black;
        border-radius: 20px;
    }

    .content-box {
        background-color: white;
        padding: 20px;
        border-radius: 10px;
    }

    .overlay2 {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.2);
        justify-content: center;
        align-items: center;
        z-index: 1000;
    }

    .print-info {
        display: flex;
        width: 1000px;
        background-color: rgba(255, 255, 255, 0.8);
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2); /* Bóng mờ */
        margin-top: 30px;
        margin-bottom: 30px;
    }

    .print-confirm {
        margin: auto;
        width: 50%;
    }

    .print-progress {
        max-width: 500px;
        background-color: lightskyblue;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        margin-top: 30px;
        margin-bottom: 30px;
    }

    .delete {
        position: absolute;
        right: 10px;
        top: 10px;
        background: none;
        border: none;
        font-size: 1.2em;
        cursor: pointer;
    }

    .config {
        margin: auto;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .next {
        width: 100px;
        height: 35px;
        background-color: deepskyblue;
        border: none;
        cursor: pointer;
        border-radius: 5px;
        margin-left: 50px;
        margin-right: 50px;
    }

    label {
        width: 200px;
        margin-bottom: 25px;
    }

    .info {
        text-align: center;
    }
</style>

<script>
    const printButtons = document.querySelectorAll('.print');

    printButtons.forEach(button => {
        button.addEventListener('click', function () {
             document.getElementById('progress').style.display = 'flex';
        });
    });

</script>